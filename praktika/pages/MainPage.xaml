<Page x:Class="praktika.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame Name="frameToBasePages" Grid.Column="1"/>
        <Grid Background="#004165">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/images/Logo.png" Grid.RowSpan="2"/>
            <Button Grid.Row="2" Click="Show_Devices">Заказы</Button>
            <Button Grid.Row="3">Клиенты</Button>
            <Button Grid.Row="4" Click="Show_Master">Мастера</Button>
            <Button Grid.Row="9" Click="ExitClick">Выход</Button>
        </Grid>
    </Grid>
</Page>
